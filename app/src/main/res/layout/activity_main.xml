        tools:layout_editor_absoluteX="80dp"
        tools:layout_editor_absoluteY="366dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:background="@drawable/button_rounded"
